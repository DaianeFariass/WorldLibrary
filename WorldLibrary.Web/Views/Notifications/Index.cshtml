@model IEnumerable<WorldLibrary.Web.Data.Notification>

@{
    ViewData["Title"] = "Index";
}

<h1>Nofifications</h1>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />

<br />


<div class="container">

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Reserve.User)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reserve.Customer)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reserve.Book)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reserve.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reserve.BookingDate)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.NotificationType)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Reserve.User.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reserve.Customer.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reserve.Book.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reserve.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reserve.BookingDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NotificationType)
                                </td>
                                <td>

                                    <a asp-action="DeleteConfirmed" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}