@model WorldLibrary.Web.Data.Entities.Book

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout"; // Especifica o layout a ser usado
}

<br />
<br />
<br />
<br />
<br />
<br />

<div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <dl class="container justify-content-center">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Author)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Year)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Year)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Synopsis)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Synopsis)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Assessment)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Assessment)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.StatusBook)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StatusBook)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ImagePdfFullPath)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ImagePdfFullPath)
                </dd>
                <dd class="col-sm-9">

                    <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto">

                </dd>
                @if (this.User.IsInRole("Librarian") || this.User.IsInRole("Assistant"))
                {

                    <dd class="col-sm-9">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="far fa-edit"></i>Edit</a>
                    </dd>

                }
                @if(this.User.Identity.IsAuthenticated)
                {
                    <dd class="col-sm-9">
                        <a asp-action="DownloadPdf" asp-route-id="@Model.Id" class="btn btn-primary" target="_blank"><i class="far fa-eye"></i>Read Now</a>
                    </dd>
                   
                    
                }
                <dd class="col-sm-9">

                    <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i>Back to List</a>
                   
                </dd>
            </dl>
        </div>
    </div>
</div>



