@model WorldLibrary.Web.Models.BookReturnViewModel
@{
    ViewData["Title"] = "BookReturn";
    Layout = "_Layout"; // Especifica o layout a ser usado
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="BookReturn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" asp-items="Model.Books" class="form-control"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <p>@ViewBag.ReturnDate </p>
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualReturnDate" class="control-label"></label>
                <input asp-for="ActualReturnDate" class="form-control" />
                <span asp-validation-for="ActualReturnDate" class="text-danger"></span>
                @if (Model.ActualReturnDate.Value > Model.ReturnDate.Value)
                {
                    TimeSpan rate = Model.ActualReturnDate.Value.Date - Model.ReturnDate.Value.Date;
                    ViewBag.Rate = 0.50;
                    Model.Rate = rate * ViewBag.Rate;
                }
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <p>@ViewBag.Rate </p>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    }
}
